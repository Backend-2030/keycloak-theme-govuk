{
  "name": "keycloak-theme-govuk",
  "version": "0.4.0",
  "devDependencies": {
    "govuk-elements-sass": "2.2.1",
    "govuk_template_jinja": "0.19.2",
    "jquery": "1.11.3",
    "npm-run-all": "^4.0.2",
    "npm-sass": "^2.2.0"
  },
  "scripts": {
    "build": "npm-run-all build:assets build:sass",
    "build:assets": "npm-run-all build:assets:govuk_template build:assets:govuk_frontend_toolkit build:assets:jquery build:sass",
    "build:assets:govuk_template": "mkdir -p govuk/login/resources/vendor && cp -R node_modules/govuk_template_jinja/assets/ govuk/login/resources/vendor/govuk_template",
    "build:assets:govuk_frontend_toolkit": "mkdir -p govuk/login/resources/vendor/govuk_frontend_toolkit/javascripts && npm-run-all build:assets:govuk_frontend_toolkit:images build:assets:govuk_frontend_toolkit:js",
    "build:assets:govuk_frontend_toolkit:images": "cp -R node_modules/govuk_frontend_toolkit/images/ govuk/login/resources/vendor/govuk_frontend_toolkit/",
    "build:assets:govuk_frontend_toolkit:js": "cp -R node_modules/govuk_frontend_toolkit/javascripts/govuk/ govuk/login/resources/vendor/govuk_frontend_toolkit/javascripts/",
    "build:assets:jquery": "mkdir -p govuk/login/resources/vendor/jquery && cp -R node_modules/jquery/dist/jquery.min.* govuk/login/resources/vendor/jquery/",
    "build:sass": "mkdir -p govuk/login/resources/css && npm-run-all build:sass:govuk_elements build:sass:govuk_elements-ie6 build:sass:govuk_elements-ie7 build:sass:govuk_elements-ie8",
    "build:sass:govuk_elements": "npm-sass sass/govuk_elements.scss > govuk/login/resources/css/govuk_elements.css",
    "build:sass:govuk_elements-ie6": "npm-sass sass/govuk_elements-ie6.scss > govuk/login/resources/css/govuk_elements-ie6.css",
    "build:sass:govuk_elements-ie7": "npm-sass sass/govuk_elements-ie6.scss > govuk/login/resources/css/govuk_elements-ie7.css",
    "build:sass:govuk_elements-ie8": "npm-sass sass/govuk_elements-ie6.scss > govuk/login/resources/css/govuk_elements-ie8.css",
    "dist": "npm-run-all dist:govuk dist:govuk-social-providers",
    "dist:govuk": "tar -czf govuk.tar.gz govuk/",
    "dist:govuk-social-providers": "tar -czf govuk-social-providers.tar.gz govuk-social-providers/",
    "clean": "rm -rf govuk/login/resources/ && rm govuk.tar.gz"
  }
}
